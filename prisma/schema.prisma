generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Prayer {
  id              String   @id @default(uuid())
  name            String?
  email           String?
  prayer          String   @db.Text
  prayerForOther  Boolean  @default(false)
  otherPersonName String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}
