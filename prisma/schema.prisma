generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Prayer {
  id              String   @id @default(uuid())
  name            String?
  email           String?
  prayer          String   @db.Text
  prayerForOther  Boolean  @default(false)
  otherPersonName String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}

model IntercessionPost {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  date        DateTime
  images      String   @db.Text // JSON array de URLs das imagens
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([published])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash bcrypt
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
