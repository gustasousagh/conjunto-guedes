generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prayer {
  id              String        @id @default(uuid())
  name            String?
  email           String?
  prayer          String        @db.Text
  prayerForOther  Boolean       @default(false)
  otherPersonName String?
  response        String?       @db.Text
  respondedAt     DateTime?
  notifiedByEmail Boolean       @default(false)
  source          String?       // De onde veio (ex: "igreja", "praca", etc)
  qrCodeGroup     QRCodeGroup?  @relation(fields: [qrCodeGroupId], references: [id])
  qrCodeGroupId   String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([email])
  @@index([createdAt])
  @@index([source])
  @@index([qrCodeGroupId])
}

model QRCodeGroup {
  id          String   @id @default(uuid())
  name        String   @unique  // Nome do grupo (ex: "Igreja Central")
  slug        String   @unique  // Slug para URL (ex: "igreja-central")
  description String?  @db.Text
  color       String   @default("#6366f1") // Cor para identificação visual
  active      Boolean  @default(true)
  prayers     Prayer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([active])
}

model IntercessionPost {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  date        DateTime
  images      String   @db.Text // JSON array de URLs das imagens
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([published])
}

model SiteSettings {
  id        String   @id @default(uuid())
  key       String   @unique // Ex: "verse_text", "verse_reference"
  value     String   @db.Text
  updatedAt DateTime @updatedAt

  @@index([key])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash bcrypt
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailUnsubscribe {
  id        String   @id @default(uuid())
  email     String   @unique // Email que não quer mais receber notificações
  reason    String?  @db.Text // Motivo opcional
  createdAt DateTime @default(now())

  @@index([email])
}
